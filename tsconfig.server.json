{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "outDir": "dist",
        "rootDir": ".",
        "noEmit": false,
        "isolatedModules": false
    },
    "include": [
        "server.ts",
        "services/**/*",
        "models/**/*",
        "constants.ts",
        "types.ts"
    ]
}